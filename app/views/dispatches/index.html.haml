        %td= dispatch.sent_at
        %td= link_to 'Show', dispatch
        %td= link_to 'Edit', edit_dispatch_path(dispatch)
        %td= link_to 'Destroy', dispatch, method: :delete, data: { confirm: 'Are you sure?' }

